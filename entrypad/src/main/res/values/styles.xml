<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="MainAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:screenOrientation">landscape</item>
        <item name="android:configChanges">orientation</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowSoftInputMode">adjustPan|stateAlwaysHidden</item>
        <item name="android:colorControlHighlight" tools:ignore="NewApi">#f2f2f2</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
    </style>
    <style name="ActivityAnimation" parent="@android:style/Animation.Activity">

    </style>

    <style name="MyEditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/et_underline_unselected</item>
        <item name="android:textCursorDrawable">@drawable/et_cursor_shape</item>
        <item name="android:textColorHint">@color/colorDeepGray</item>
        <item name="android:hint">@string/emptyText</item>
    </style>

    <style name="titleText" parent="titleNormalText">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="titleNormalText" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="CheckBox" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item><!--选中颜色-->
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:maxHeight">10dp</item>
    </style>

</resources>