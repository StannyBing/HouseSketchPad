<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootCl"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:fitsSystemWindows="true"
    android:background="@color/colorPrimary">
    <com.gt.entrypad.module.project.ui.view.titleView.TitleView
        android:id="@+id/leftTv"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/shape_solid_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/toolBarTitleTv"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/toolBarTitleTv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintWidth_percent="0.78"
        android:text="@string/emptyText"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/leftTv"
        app:layout_constraintRight_toLeftOf="@id/rightTv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="14sp"/>
    <com.gt.entrypad.module.project.ui.view.titleView.TitleView
        android:id="@+id/rightTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintWidth_percent="0.1"
        android:layout_marginEnd="16dp"
        android:background="@drawable/shape_solid_bg"
        app:layout_constraintLeft_toRightOf="@id/toolBarTitleTv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>