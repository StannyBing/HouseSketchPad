<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="androidx.databinding.BaseObservableField"/>
        <variable
            name="viewModel"
            type="com.gt.entrypad.module.project.ui.view.infoDialogView.InfoDialogViewViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp">
        <TextView
            android:id="@+id/viewTitleTv"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{viewModel.title}"/>


        <TextView
            android:id="@+id/viewRequireTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/viewTitleTv"
            app:layout_constraintTop_toTopOf="@id/viewTitleTv"
            app:layout_constraintBottom_toBottomOf="@id/viewTitleTv"
            android:layout_marginStart="2dp"
            android:textColor="@color/red"
            android:text="@{viewModel.requiredContent}"/>

        <TextView
            android:id="@+id/contentTv"
            style="@style/MyEditText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/viewTitleTv"
            android:background="@drawable/shape_stroke_bg"
            android:hint="@{viewModel.hint}"
            android:text="@{viewModel.inputContent}"/>


        <TextView
            android:id="@+id/clickTv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@{viewModel.title}"
            android:gravity="bottom"
            android:onClick="@{viewModel.onClick}"
            app:layout_constraintTop_toTopOf="@id/contentTv"
            app:layout_constraintBottom_toBottomOf="@id/contentTv"
            app:layout_constraintRight_toRightOf="@id/contentTv"
            android:textColor="@color/colorPrimary"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>